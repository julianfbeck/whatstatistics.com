---
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/jpeg" href="/icon.jpg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>FAQ - WhatStats | WhatsApp Chat Analytics Questions</title>
		<meta name="description" content="Frequently asked questions about WhatStats - WhatsApp chat analytics app. Learn about privacy, features, Chat Wrapped, and how to use the app." />
		<meta name="author" content="WhatStats" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://whatstatistics.com/faq" />
		<meta property="og:title" content="FAQ - WhatStats | WhatsApp Chat Analytics Questions" />
		<meta property="og:description" content="Frequently asked questions about WhatStats - WhatsApp chat analytics app. Learn about privacy, features, Chat Wrapped, and how to use the app." />
		<meta property="og:image" content="https://whatstatistics.com/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://whatstatistics.com/faq" />
		<meta property="twitter:title" content="FAQ - WhatStats | WhatsApp Chat Analytics Questions" />
		<meta property="twitter:description" content="Frequently asked questions about WhatStats - WhatsApp chat analytics app. Learn about privacy, features, Chat Wrapped, and how to use the app." />
		<meta property="twitter:image" content="https://whatstatistics.com/og-image.jpg" />
		
		<!-- App Store -->
		<meta name="apple-itunes-app" content="app-id=1481007233" />
		
		<!-- Plausible Analytics -->
		<script defer data-domain="whatstatistics.com" src="https://plausible.home.juli.sh/js/script.js"></script>
	</head>
	<body class="text-white min-h-screen">
		<!-- Navigation -->
		<nav class="fixed top-0 left-0 right-0 z-50 glass border-b border-white/10">
			<div class="container mx-auto px-6">
				<div class="flex items-center justify-between h-20">
					<!-- Logo -->
					<a href="/" class="flex items-center space-x-3">
						<img src="/icon.jpg" alt="WhatStats logo" class="w-10 h-10 rounded-lg" />
						<span class="text-xl font-bold gradient-text">WhatStats</span>
					</a>
					
					<!-- Desktop Navigation -->
					<div class="hidden md:flex items-center space-x-8">
						<a href="/" class="text-slate-300 hover:text-green-400 transition-colors font-medium">Home</a>
						<a href="/#features" class="text-slate-300 hover:text-green-400 transition-colors font-medium">Features</a>
						<a href="/#usecases" class="text-slate-300 hover:text-green-400 transition-colors font-medium">Use Cases</a>
						<a href="/#reviews" class="text-slate-300 hover:text-green-400 transition-colors font-medium">Reviews</a>
						<a href="/faq" class="text-white hover:text-green-400 transition-colors font-medium">FAQ</a>
					</div>
					
					<!-- Mobile Menu Button -->
					<button 
						id="mobile-menu-button" 
						class="md:hidden glass p-2 rounded-xl"
						aria-label="Toggle mobile menu"
						aria-expanded="false"
						aria-controls="mobile-menu">
						<svg id="menu-icon" class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
						</svg>
						<svg id="close-icon" class="w-6 h-6 text-white hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
						</svg>
					</button>
				</div>
				
				<!-- Mobile Menu -->
				<div id="mobile-menu" class="md:hidden hidden absolute top-full left-0 right-0 bg-slate-900 border-t border-white/10">
					<div class="px-6 py-4 space-y-4">
						<a href="/" class="block text-slate-300 hover:text-green-400 transition-colors font-medium py-2">Home</a>
						<a href="/#features" class="block text-slate-300 hover:text-green-400 transition-colors font-medium py-2">Features</a>
						<a href="/#usecases" class="block text-slate-300 hover:text-green-400 transition-colors font-medium py-2">Use Cases</a>
						<a href="/#reviews" class="block text-slate-300 hover:text-green-400 transition-colors font-medium py-2">Reviews</a>
						<a href="/faq" class="block text-white hover:text-green-400 transition-colors font-medium py-2">FAQ</a>
						<a href="https://apps.apple.com/app/apple-store/id1481007233?pt=120183609&ct=Website&mt=8" 
						   class="block bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-xl px-4 py-3 text-center mt-4">
							Download App
						</a>
					</div>
				</div>
			</div>
		</nav>

		<!-- FAQ Section -->
		<section class="py-32 relative overflow-hidden min-h-screen pt-32">
			<!-- Background -->
			<div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-slate-800 to-slate-900"></div>
			<div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(34,197,94,0.05),transparent_70%)]"></div>
			
			<div class="container mx-auto px-6 relative z-10">
				<div class="text-center mb-20">
					<div class="inline-flex items-center px-4 py-2 glass rounded-full text-sm text-green-400 mb-6">
						<div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
						Frequently Asked Questions
					</div>
					<h1 class="text-4xl lg:text-6xl font-black mb-6 gradient-text">
						Got Questions?
					</h1>
					<p class="text-xl lg:text-2xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
						Everything you need to know about WhatStats
					</p>
				</div>
				
				<div class="max-w-4xl mx-auto space-y-6">
					<!-- FAQ Item 1 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Is my data safe and private?</h2>
						<p class="text-slate-300 leading-relaxed">
							Absolutely! WhatStats processes all your chat data locally on your device. Your conversations never leave your phone and are not shared with any external services. We don't collect, store, or have access to your personal chat data.
						</p>
					</div>
					
					<!-- FAQ Item 2 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">How to Import Chats</h2>
						<div class="text-slate-300 leading-relaxed">
							<ol class="list-decimal list-inside space-y-2">
								<li><strong>Open WhatsApp:</strong> Select a chat</li>
								<li><strong>Export Chat:</strong> In the menu, click export chat</li>
								<li><strong>Select "Without Media":</strong> Export the chat without media files</li>
								<li><strong>Share with WhatStats:</strong> When the chat finishes exporting, select "More" in the ShareSheet</li>
								<li><strong>Click WhatStats:</strong> Choose WhatStats from the sharing options</li>
								<li><strong>Add to WhatStats:</strong> Press "Yes" to add the chat to WhatStats</li>
							</ol>
						</div>
					</div>
					
					<!-- FAQ Item 3 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">What is Chat Wrapped?</h2>
						<p class="text-slate-300 leading-relaxed">
							Chat Wrapped is our signature feature inspired by Spotify Wrapped. It creates a beautiful, shareable visual summary of your chat history, showing your messaging patterns, emoji usage, most active times, and conversation insights in an engaging format.
						</p>
					</div>
					
					<!-- FAQ Item 4 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">One person does not show up in the analytics</h2>
						<p class="text-slate-300 leading-relaxed">
							The person needs to send at least one message to appear in the analytics. If someone was added to a group chat but never sent any messages, they won't be included in the statistics.
						</p>
					</div>
					
					<!-- FAQ Item 5 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Which platforms does WhatStats support?</h2>
						<p class="text-slate-300 leading-relaxed">
							Currently, WhatStats is available for iOS devices. We're working on expanding to other platforms based on user demand. The app works with WhatsApp chat exports from any platform.
						</p>
					</div>
					
					<!-- FAQ Item 6 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Can I analyze group chats?</h2>
						<p class="text-slate-300 leading-relaxed">
							Yes! WhatStats works with both individual and group chats. You can see detailed analytics for each participant in group chats, including who sends the most messages, response times, and conversation patterns.
						</p>
					</div>

					<!-- FAQ Item 7 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">How accurate are the analytics?</h2>
						<p class="text-slate-300 leading-relaxed">
							WhatStats analyzes your exported chat data with high precision. The accuracy depends on the completeness of your exported chat file. All message counts, timestamps, and participant data are extracted directly from WhatsApp's export format.
						</p>
					</div>

					<!-- FAQ Item 8 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Can I share my Chat Wrapped?</h2>
						<p class="text-slate-300 leading-relaxed">
							Absolutely! Chat Wrapped is designed to be shareable. You can save your Chat Wrapped as images and share them on social media, with friends, or keep them as personal memories. No personal chat content is included in the shareable summaries.
						</p>
					</div>

					<!-- FAQ Item 9 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">What if I have multiple chats to analyze?</h2>
						<p class="text-slate-300 leading-relaxed">
							You can import and analyze multiple chats separately in WhatStats. Each chat is processed independently, allowing you to compare different conversations and see unique insights for each relationship or group.
						</p>
					</div>

					<!-- FAQ Item 10 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Why does the analysis need so much time?</h2>
						<p class="text-slate-300 leading-relaxed">
							Depending on the size of the chat, the app needs time to analyze all the data. Larger chats with thousands of messages require more processing time to generate accurate statistics and insights.
						</p>
					</div>

					<!-- FAQ Item 11 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Do we use AI?</h2>
						<p class="text-slate-300 leading-relaxed">
							No, we do not use AI. All analytics are generated using traditional data processing methods that run locally on your device. Your data is processed using statistical analysis and pattern recognition algorithms.
						</p>
					</div>

					<!-- FAQ Item 12 -->
					<div class="glass rounded-2xl p-8">
						<h2 class="text-xl font-bold text-white mb-4">Does the app work with WhatsApp Business?</h2>
						<p class="text-slate-300 leading-relaxed">
							Yes! The app works with chat exports from both regular WhatsApp and WhatsApp Business. The export process is the same, and all analytics features are fully compatible with business chat data.
						</p>
					</div>
				</div>

				<!-- CTA Section -->
				<div class="text-center mt-20">
					<h2 class="text-3xl lg:text-4xl font-bold mb-6 text-white">
						Ready to Explore Your Chat Insights?
					</h2>
					<p class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto">
						Download WhatStats and discover the hidden patterns in your conversations
					</p>
					
					<a href="https://apps.apple.com/app/apple-store/id1481007233?pt=120183609&ct=Website&mt=8" 
						 class="group inline-flex items-center px-12 py-6 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-2xl btn-modern text-xl shadow-2xl">
						<svg class="w-8 h-8 mr-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
							<path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
						</svg>
						Download Free on App Store
					</a>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-slate-900 py-12 border-t border-gray-800">
			<div class="container mx-auto px-6">
				<div class="text-center">
					<div class="flex items-center justify-center mb-6">
						<img src="/icon.jpg" alt="WhatStats logo" class="w-10 h-10 rounded-lg mr-3" />
						<span class="text-2xl font-bold text-white">WhatStats</span>
					</div>
					<p class="text-gray-400 mb-6">
						Unlock the secrets of your WhatsApp conversations with beautiful analytics.
					</p>
					<div class="flex justify-center space-x-6 mb-8">
						<a href="https://apps.apple.com/app/apple-store/id1481007233?pt=120183609&ct=Website&mt=8" class="text-gray-400 hover:text-green-400 transition-colors">
							App Store
						</a>
						<a href="https://www.apple.com/legal/internet-services/itunes/dev/stdeula/" class="text-gray-400 hover:text-green-400 transition-colors">
							Terms of Use
						</a>
						<a href="/" class="text-gray-400 hover:text-green-400 transition-colors">
							Home
						</a>
					</div>
					<p class="text-gray-500 text-sm">
						© 2024 WhatStats. All rights reserved. Privacy-focused WhatsApp analytics.
					</p>
					<p class="text-gray-600 text-xs mt-2 max-w-2xl mx-auto">
						WhatStats is not affiliated with, endorsed by, or sponsored by WhatsApp Inc. or Meta Platforms, Inc. 
						WhatsApp is a trademark of WhatsApp Inc. This app analyzes exported chat data locally on your device.
					</p>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu functionality
			document.addEventListener('DOMContentLoaded', function() {
				const mobileMenuButton = document.getElementById('mobile-menu-button');
				const mobileMenu = document.getElementById('mobile-menu');
				const menuIcon = document.getElementById('menu-icon');
				const closeIcon = document.getElementById('close-icon');

				if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
					mobileMenuButton.addEventListener('click', function() {
						const isHidden = mobileMenu.classList.contains('hidden');
						
						if (isHidden) {
							mobileMenu.classList.remove('hidden');
							menuIcon.classList.add('hidden');
							closeIcon.classList.remove('hidden');
							mobileMenuButton.setAttribute('aria-expanded', 'true');
						} else {
							mobileMenu.classList.add('hidden');
							menuIcon.classList.remove('hidden');
							closeIcon.classList.add('hidden');
							mobileMenuButton.setAttribute('aria-expanded', 'false');
						}
					});

					// Close mobile menu when clicking on links
					const mobileMenuLinks = mobileMenu.querySelectorAll('a');
					mobileMenuLinks.forEach(link => {
						link.addEventListener('click', function() {
							mobileMenu.classList.add('hidden');
							menuIcon.classList.remove('hidden');
							closeIcon.classList.add('hidden');
							mobileMenuButton.setAttribute('aria-expanded', 'false');
						});
					});

					// Close mobile menu when clicking outside
					document.addEventListener('click', function(event) {
						if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
							mobileMenu.classList.add('hidden');
							menuIcon.classList.remove('hidden');
							closeIcon.classList.add('hidden');
							mobileMenuButton.setAttribute('aria-expanded', 'false');
						}
					});
				}
			});
		</script>
	</body>
</html>