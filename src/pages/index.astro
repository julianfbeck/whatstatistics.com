					shareWrappedBtn.addEventListener('click', function() {
						shareStats(
							'My Chat Wrapped - WhatStats',
							'I just discovered my chat personality with WhatStats! Get your own Chat Wrapped and see your WhatsApp insights.',
							window.location.href + '#chat-wrapped'
						);
					});
				}
			});
